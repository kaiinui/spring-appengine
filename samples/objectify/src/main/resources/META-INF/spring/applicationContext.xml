<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:p="http://www.springframework.org/schema/p" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="com.googlecode.spring.appengine.samples.objectify">
        <context:exclude-filter expression="org.springframework.stereotype.Controller" type="annotation" />
    </context:component-scan>

    <bean id="ofyService" class="com.googlecode.spring.appengine.objectify.OfyServiceFactoryBean" 
        p:basePackage="com.googlecode.spring.appengine.samples.objectify.domain" />

    <bean class="com.googlecode.spring.appengine.samples.objectify.config.DatastorePopulator" />

</beans>
